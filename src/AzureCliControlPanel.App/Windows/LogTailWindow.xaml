<Window x:Class="AzureCliControlPanel.App.Windows.LogTailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Tail" Height="640" Width="1100" WindowStartupLocation="CenterOwner">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
      <TextBlock FontSize="14" FontWeight="SemiBold" Text="{Binding TitleText}"/>
      <Button Content="Stop" Command="{Binding StopCommand}" Margin="12,0,0,0"/>
      <Button Content="Copy All" Command="{Binding CopyAllCommand}" Margin="8,0,0,0"/>
    </StackPanel>

    <TextBox Text="{Binding LogText}" Margin="8" FontFamily="Consolas"
             IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
             AcceptsReturn="True" TextWrapping="NoWrap"/>
  </DockPanel>
</Window>
