<Window x:Class="AzureCliControlPanel.App.Windows.TextDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding TitleText}" Height="520" Width="980" WindowStartupLocation="CenterOwner">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
      <Button Content="Copy" Command="{Binding CopyCommand}"/>
      <Button Content="Close" Command="{Binding CloseCommand}" Margin="8,0,0,0"/>
    </StackPanel>

    <TextBox Text="{Binding BodyText}" Margin="8" FontFamily="Consolas"
             IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
             AcceptsReturn="True" TextWrapping="Wrap"/>
  </DockPanel>
</Window>
